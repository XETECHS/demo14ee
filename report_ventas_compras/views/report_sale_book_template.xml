<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_sale_book">
        <t t-call="web.html_container">
            <t t-call="report_ventas_compras.external_sale_layout_ab">
                <div class="page">
                    <style type="text/css">
                        .table-x thead th {
                        border: 1px solid #dee2e6;
                        padding-top: 0px;
                        padding-bottom: 0px;
                        font-size:16px;
                        }
                        td.border-x {
                         padding-left: 0 !important;
                         padding-right: 0 !important;
                        }
                        .table-x tbody td {
                        font-size: 11px;border-right:
                        1px solid #dee2e6;
                        border-right:1px solid #dee2e6 !important;
                        border-left:1px solid #dee2e6 !important;
                        border-top:0 !important;
                        border-bottom:0 !important;
                        padding-top: 2px;
                        padding-bottom: 1px;
                        }
                        .table-x tbody tr {
                        border: 0 !important
                        }
                    </style>
                    <t t-value="ultima" t-set="final"/>
                    <t t-set="sum_bien_gravado" t-value="0.0"/>
                    <t t-set="sum_bien_e_gravado" t-value="0.0"/>
                    <t t-set="sum_serv_gravado" t-value="0.0"/>
                    <t t-set="sum_serv_e_gravado" t-value="0.0"/>
                    <t t-set="sum_iva" t-value="0.0"/>
                    <t t-set="sum_subtotal" t-value="0.0"/>
                    <t t-set="folio_inicial_cont" t-value="0"/>
                    <t t-foreach="data" t-as="folio">
                        <h3 t-esc="company_id.name"/>
                        <address t-field="company_id.partner_id"
                                 t-options='{"widget": "contact", "fields": ["address", "phone"]}'/>
                        <span t-esc="'NIT: {}'.format(company_id.vat)"/>
                        <div class="row">
                            <div class="col-4">
                                <div class="row">
                                    <div class="col-12">
                                        <h5 t-esc="'FOLIO DE CORRELATIVO: {}'.format( int(folio_inicial_cont) + int(folio[1][0]['folio_no']))"/>
                                        <t t-set="folio_inicial_cont" t-value="folio_inicial_cont + int(folio[1][0]['folio_no'])"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-4 text-center">
                                <h3>LIBRO DE VENTAS Y SERVICIOS</h3>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-2"></div>
                            <div class="col-8 text-center">
                                <h5 t-esc="date"/>
                            </div>
                        </div>
                        <table class="text-center table table-condensed table-x">
                            <thead>
                                <tr>
                                    <th class="title-border-x" rowspan="2">No.</th>
                                    <th class="title-border-x" rowspan="2">FECHA</th>
                                    <th class="title-border-x" rowspan="2">TIPO</th>
                                    <th class="title-border-x" rowspan="2">SERIE</th>
                                    <th class="title-border-x" rowspan="2"># DOC</th>
                                    <th class="title-border-x" rowspan="2">NIT</th>
                                    <th class="title-border-x" rowspan="2">COMPRADOR</th>
                                    <th class="title-border-x" colspan="2">VALOR</th>
                                    <th class="title-border-x" colspan="2">EXPORTACIONES</th>
                                    <th class="title-border-x" rowspan="2">IVA<br/>DEBITO</th>
                                    <th class="title-border-x" rowspan="2">RET</th>
                                    <th class="title-border-x" rowspan="2">MONTO IVA<br/>INCLUIDO
                                    </th>
                                </tr>
                                <tr>
                                    <th class="title-border-x">BIENES</th>
                                    <th class="title-border-x">SERVICIOS</th>
                                    <th class="title-border-x">BIENES</th>
                                    <th class="title-border-x">SERVICIOS</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="folio[1]" t-as="line">
                                    <td class="border-x">
                                        <span t-esc="line.get('no', '')"/>
                                    </td>
                                    <td class="border-x">
                                        <span t-esc="line.get('fecha', '')"/>
                                    </td>
                                    <td class="border-x">
                                        <span t-esc="line.get('tipo', '')"/>
                                    </td>
                                    <td class="border-x">
                                        <span t-esc="line.get('serie', '')"/>
                                    </td>
                                    <td class="border-x">
                                        <span t-esc="line.get('numero', '')"/>
                                    </td>
                                    <td class="border-x">
                                        <span t-esc="line.get('nit_cliente', '')"/>
                                    </td>
                                    <td class="border-x text-left">
                                        <span t-esc="line.get('cliente', '')"/>
                                    </td>
                                    <td class="border-x text-right">
                                        <span t-field="company_id.currency_id.symbol"/>
                                        <span t-esc="format_price(line.get('bienes_gravados', ''), company_id.currency_id)"/>
                                    </td>
                                    <td class="border-x text-right">
                                        <span t-field="company_id.currency_id.symbol"/>
                                        <span t-esc="format_price(line.get('servicios_gravados', ''), company_id.currency_id)"/>
                                    </td>
                                    <td class="border-x text-right">
                                        <span t-field="company_id.currency_id.symbol"/>
                                        <span t-esc="format_price(line.get('bienes_e_gravados', ''), company_id.currency_id)"/>
                                    </td>
                                    <td class="border-x text-right">
                                        <span t-field="company_id.currency_id.symbol"/>
                                        <span t-esc="format_price(line.get('servicios_e_gravados', ''), company_id.currency_id)"/>
                                    </td>
                                    <td class="border-x text-right">
                                        <span t-field="company_id.currency_id.symbol"/>
                                        <span t-esc="format_price(line.get('iva', ''), company_id.currency_id)"/>
                                    </td>
                                    <td class="border-x text-right">
                                        <span t-field="company_id.currency_id.symbol"/>
                                        <span t-esc="format_price(line.get('retencion', ''), company_id.currency_id)"/>
                                    </td>
                                    <td class="border-x text-right">
                                        <span t-field="company_id.currency_id.symbol"/>
                                        <span t-esc="format_price(line.get('subtotal', ''), company_id.currency_id)"/>
                                    </td>
                                    <t t-set="sum_bien_gravado"
                                       t-value="sum_bien_gravado+line.get('bienes_gravados', 0.0)"/>
                                    <t t-set="sum_serv_gravado"
                                       t-value="sum_serv_gravado+line.get('servicios_gravados', 0.0)"/>
                                    <t t-set="sum_bien_e_gravado"
                                       t-value="sum_bien_e_gravado+line.get('bienes_e_gravados', 0.0)"/>
                                    <t t-set="sum_serv_e_gravado"
                                       t-value="sum_serv_e_gravado+line.get('servicios_e_gravados', 0.0)"/>
                                    <t t-set="sum_iva" t-value="sum_iva+line.get('iva', 0.0)"/>
                                    <t t-set="sum_subtotal" t-value="sum_subtotal+line.get('subtotal', 0.0)"/>
                                </tr>
                                <tr t-if="len(data) == folio[0]">
                                    <td class="border-x"/>
                                    <td class="border-x"/>
                                    <td class="border-x"/>
                                    <td class="border-x"/>
                                    <td class="border-x"/>
                                    <td class="border-x"/>
                                    <td class="border-x text-left">
                                        <span t-esc="final.get('cliente', '')"/>
                                    </td>
                                    <td class="border-x text-right">
                                        <span t-field="company_id.currency_id.symbol"/>
                                        <span t-esc="format_price(sum_bien_gravado, company_id.currency_id)"/>
                                    </td>
                                    <td class="border-x text-right">
                                        <span t-field="company_id.currency_id.symbol"/>
                                        <span t-esc="format_price(sum_serv_gravado, company_id.currency_id)"/>
                                    </td>
                                    <td class="border-x text-right">
                                        <span t-field="company_id.currency_id.symbol"/>
                                        <span t-esc="format_price(sum_bien_e_gravado, company_id.currency_id)"/>
                                    </td>
                                    <td class="border-x text-right">
                                        <span t-field="company_id.currency_id.symbol"/>
                                        <span t-esc="format_price(sum_serv_e_gravado, company_id.currency_id)"/>
                                    </td>
                                    <td class="border-x text-right">
                                        <span t-field="company_id.currency_id.symbol"/>
                                        <span t-esc="format_price(final.get('total_iva', 0.0), company_id.currency_id)"/>
                                    </td>
                                    <td class="border-x text-right">
                                        <span t-field="company_id.currency_id.symbol"/>
                                        <span t-esc="format_price(final.get('total_ret', 0.0), company_id.currency_id)"/>
                                    </td>
                                    <td class="border-x text-right">
                                        <span t-field="company_id.currency_id.symbol"/>
                                        <span t-esc="format_price(final.get('total_total', 0.0), company_id.currency_id)"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <t t-if="folio[0] == len(data)">
                            <br/>
                            <div>
                                <style type="text/css">
                                    .table-x {
                                    .title-border-x {
                                    border: 1px solid black !important;
                                    text-align: center;
                                    }
                                    .border-x {
                                    border: 1px solid black !important;
                                     padding-left: 10px;
                                    padding-right: 10px;
                                    }
                                    .no-border-x {
                                    border: 0px !important;
                                    }
                                    .thead th {
                                    border: 1px solid #dee2e6
                                    }
                                    .resume {
                                    text-align: left !important;
                                    }
                                </style>
                                <t t-set="isr7"
                                   t-value="0.00 if (sum_bien_gravado + sum_serv_gravado + sum_bien_e_gravado + sum_serv_e_gravado) &lt;= 30000 else ((sum_bien_gravado + sum_serv_gravado + sum_bien_e_gravado + sum_serv_e_gravado) - 30000)*0.07"/>
                                <t t-set="isr5"
                                   t-value="30000*0.05 if (sum_bien_gravado + sum_serv_gravado + sum_bien_e_gravado + sum_serv_e_gravado) &gt;= 30000 else (sum_bien_gravado + sum_serv_gravado + sum_bien_e_gravado + sum_serv_e_gravado) * 0.05"/>
                                <table class="text-left table-x" style="width:70%">
                                    <tr>
                                        <th class="border-x text-left">TOTAL BIENES</th>
                                        <td class="border-x">
                                            <span t-field="company_id.currency_id.symbol"/>
                                            <span t-esc="format_price(sum_bien_gravado + sum_bien_e_gravado, company_id.currency_id)"/>
                                        </td>
                                        <td style="width:15%"/>
                                        <th class="border-x resume">ISR 7%</th>
                                        <td>
                                            <span t-field="company_id.currency_id.symbol"/>
                                            <span t-esc="format_price(isr7, company_id.currency_id)"/>
                                        </td>

                                    </tr>
                                    <tr>
                                        <th class="border-x resume">TOTAL SERVICIOS</th>
                                        <td class="border-x">
                                            <span t-field="company_id.currency_id.symbol"/>
                                            <span t-esc="format_price(sum_serv_gravado + sum_serv_e_gravado, company_id.currency_id)"/>
                                        </td>
                                        <td style="width:15%"/>
                                        <th class="border-x text-left" style="border-bottom:1px solid black;">ISR 5%</th>
                                        <td style="border-bottom:1px solid black !important;">
                                            <span t-field="company_id.currency_id.symbol"/>
                                            <span t-esc="format_price(isr5, company_id.currency_id)"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="border-x resume" style="border-bottom:1px solid black !important;">TOTAL IVA DEBITO</th>
                                        <td class="border-x" style="border-bottom:1px solid black !important;">
                                            <span t-field="company_id.currency_id.symbol"/>
                                            <span t-esc="format_price(final.get('total_iva', 0.0), company_id.currency_id)"/>
                                        </td>
                                        <td style="width:15%"/>
                                        <th class="border-x text-left">TOTAL RETENCIONES</th>
                                        <td>
                                            <span t-field="company_id.currency_id.symbol"/>
                                            <span t-esc="format_price(isr7 + isr5, company_id.currency_id)"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="border-x resume">TOTAL GENERAL</th>
                                        <td class="border-x">
                                            <span t-field="company_id.currency_id.symbol"/>
                                            <span t-esc="format_price(sum_bien_gravado+sum_serv_gravado+sum_bien_e_gravado+sum_serv_e_gravado+final.get('total_iva', 0.0), company_id.currency_id)"/>
                                        </td>
                                        <td style="width:15%"/>
                                        <th class="border-x text-left" style="border-bottom:1px solid black !important;">RET. RECIBIDAS</th>
                                        <td style="border-bottom:1px solid black !important;">
                                            <span t-field="company_id.currency_id.symbol"/>
                                            <span t-esc="format_price(final.get('total_ret', 0.0), company_id.currency_id)"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th/>
                                        <td/>
                                        <td style="width:15%"/>
                                         <th class="border-x text-left">ISR POR PAGAR</th>
                                        <td>
                                            <span t-field="company_id.currency_id.symbol"/>
                                            <span t-esc="format_price(isr7 + isr5 + final.get('total_ret', 0.0), company_id.currency_id)"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </t>
                        <div class="text-right">
                            <t t-if="len(folio[1]) &lt; 24">
                                <div t-foreach="range(1, 24-len(folio[1]))" t-as="i"
                                     style="min-height:10px; width:100%"/>
                            </t>
                            <span t-esc="'PÃ¡g. {} de {}'.format(folio[0], len(data))"/>
                        </div>
                        <t t-if="folio[0] != len(data)">
                            <div style="page-break-after: always;"/>
                        </t>
                    </t>
                </div>
            </t>
        </t>

    </template>

    <template id="report_ventas_compras.external_sale_layout_ab">
        <!-- Multicompany -->
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>

        <t t-raw="0"/>

        <div class="header">

        </div>
        <div class="article">
            <t t-raw="0"/>
        </div>

        <div class="footer">
        </div>
    </template>

</odoo>
